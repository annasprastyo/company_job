<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
            android:id="@+id/ll_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/ripple_effect"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"

            android:paddingTop="10dp"
            android:paddingBottom="10dp">
    <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/id_camera"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/camera"/>
        <TextView
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:textSize="16dp"
                android:layout_toRightOf="@+id/id_camera"
                android:text="Ambil Foto Dari Camera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/ll_file_manager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_effect"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
        <ImageView
                android:id="@+id/id_file_manager"
                android:layout_centerVertical="true"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/file_manager"/>
        <TextView
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:textSize="16dp"
                android:layout_toRightOf="@+id/id_file_manager"
                android:text="Ambil Foto Dari Galeri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

</LinearLayout>