            </LinearLayout>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="Terima Pekerjaan"/>
        </LinearLayout>
    </LinearLayout>
